<!DOCTYPE html>
<html>
<head>
  <title>SecureSignUpInOut</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<p id="notice"><%= notice %></p>
	
	<% if session[:user_id] %>
		<%= link_to "Sign Out", '/sessions/destroy' %>
	<% else %>
		<%= link_to "Sign Up", '/users/new' %> or <%= link_to "Sign In", '/sessions/new' %>
	<% end %>
	
	<%= yield %>

</body>
</html>
